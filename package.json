{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "cheatsheets-remastered",
  "title": "Cheatsheets Remastered",
  "description": "A remastered Cheatsheets extension with enhanced functionality, custom sheet creation, and an improved browsing experience beyond devhints.io.",
  "icon": "icon.png",
  "author": "smcnab1",
  "contributors": [],
  "categories": ["Documentation", "Developer Tools", "Productivity"],
  "license": "MIT",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "commands": [
    {
      "name": "show-cheatsheets",
      "title": "Show Cheatsheets",
      "description": "List all cheatsheets",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "enableOfflineStorage",
      "type": "checkbox",
      "required": false,
      "title": "Enable Offline Storage",
      "description": "Store DevHints cheatsheets locally for offline access",
      "default": false
    },
    {
      "name": "autoUpdate",
      "type": "checkbox",
      "required": false,
      "title": "Auto Update",
      "description": "Automatically check for updates based on frequency",
      "default": false
    },
    {
      "name": "updateFrequency",
      "type": "dropdown",
      "required": false,
      "title": "Update Frequency",
      "description": "How often to check for new cheatsheets",
      "default": "never",
      "data": [
        {
          "title": "Every Use",
          "value": "every-use"
        },
        {
          "title": "Once a Week",
          "value": "weekly"
        },
        {
          "title": "Once a Month",
          "value": "monthly"
        },
        {
          "title": "Never",
          "value": "never"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.28.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^4.9.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}