{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "target": "es2022",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true
  }
}